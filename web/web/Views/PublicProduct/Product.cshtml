@model Web.Entity.Dto.UserSite.ProductPageDto
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}

@{
    var obj = new Web.Entity.Dto.UserSite.DisplayParamters();
    var param = obj.GetParameters();
    var link = obj.GetMenuLink();
}

<style>
    .py-5 {
        padding-top: 1rem !important;
        padding-bottom: 1rem !important;
    }
</style>

<div class="service-tag py-5 bg-secondary">
    <div class="col-md-12">
        <h3 class="h3 semi-bold-600 text-center mt-2">@param.OurProducts</h3>
    </div>
</div>

<section class="container overflow-hidden py-5">
    <div class="row gx-5 gx-sm-3 gx-lg-5 gy-lg-5 gy-3 pb-3 projects" id="childProduct">
        @foreach (var x in Model.GetAllProducts)
        {
            var divClassName = "col-xl-3 col-md-4 col-sm-6 project ui " + x.ParentProductId;
            <!-- Start Recent Work -->
            <div class="@divClassName">
                <a href="~/ProductDetails/@x.ProductId" class="service-work card border-0 text-white shadow-sm overflow-hidden mx-5 m-sm-0">
                    <img class="service card-img" src="data:image;base64,@Convert.ToBase64String(x.Photo)" alt="Card image" style="height:200px;width:100%;">
                    <div class="service-work-vertical card-img-overlay d-flex align-items-end">
                        <div class="service-work-content text-left text-light">
                            <span class="btn btn-outline-light rounded-pill mb-lg-3 px-lg-4 light-300">@x.ProductNameNepali</span>
                        </div>
                    </div>
                </a>
                @foreach (var price in x.GetProductPrice.Take(3))
                {
                    <span class="card-text">Per @price.UnitName - Rs.                        @price.SellingPrice</span> <br />
                }
            </div>

            <!-- End Recent Work -->
        }
    </div>
</section>

@Scripts.Render("~/web/front-end")
