                                <div class="form-card">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="fs-title">Basic</h2>
                                        </div>
                                        <div class="col-5">
                                            <h2 class="steps">Step 1 - 7</h2>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4 col-md-4 form-group">
                                            <label class="fieldlabels">
                                                FirstName:
                                            </label>
                                            <input type="text" name="FirstName"
                                                   id="FirstName"
                                                   placeholder="First Name"
                                                   class="form-control" />
                                        </div>
                                        <div class="col-sm-4 col-md-4 form-group">
                                            <label class="fieldlabels">
                                                MiddleName:
                                            </label>
                                            <input type="text" name="MiddleName"
