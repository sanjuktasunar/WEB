                                        <div class="col-sm-6 col-md-6 form-group">
                                            <label class="fieldlabels">
                                                Province:
                                            </label>
                                            <select class="form-control province"
                                                    id="TemporaryProvinceId"
                                                    name="TemporaryProvinceId">
